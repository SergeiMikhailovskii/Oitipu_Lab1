        android:textSize="56sp"
        app:layout_constraintBottom_toBottomOf="@id/hor_84"
        app:layout_constraintEnd_toEndOf="@id/vert_75"
        app:layout_constraintStart_toStartOf="@id/vert_50"
        app:layout_constraintTop_toTopOf="@id/hor_68" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="#fcf9fc"
        android:text="@string/add"
        android:textColor="#a3b7cb"
        android:textSize="56sp"
        app:layout_constraintBottom_toBottomOf="@id/hor_84"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vert_75"
        app:layout_constraintTop_toTopOf="@id/hor_68" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="#fcf9fc"
        android:text="@string/zero"
        android:textColor="#b0b0b0"
        android:textSize="56sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vert_50"
        app:layout_constraintStart_toStartOf="@id/vert_25"
        app:layout_constraintTop_toTopOf="@id/hor_84" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="#fcf9fc"
        android:text="@string/point"
        android:textColor="#b0b0b0"
