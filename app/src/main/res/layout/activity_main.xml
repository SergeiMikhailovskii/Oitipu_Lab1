        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#fcf9fc"
        android:text="@string/six"
        android:textColor="#b0b0b0"
        android:textSize="56sp"
        app:layout_constraintBottom_toBottomOf="@id/hor_68"
        app:layout_constraintEnd_toEndOf="@id/vert_75"
        app:layout_constraintStart_toStartOf="@id/vert_50"
        app:layout_constraintTop_toTopOf="@id/hor_52" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_subtract"
